<!DOCTYPE html>
<html>

<head>
    <%- include ../templates/userAdmin/head.ejs %>
</head>

<body class="skin-black">

    <%- include ../templates/userAdmin/topBar.ejs %>

        <div class="wrapper row-offcanvas row-offcanvas-left">

            <%- include ../templates/userAdmin/leftMenu.ejs %>

                <aside class="right-side">
                    <section class="content">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="panel-group m-bot20" id="accordion">
                                    <div class="panel">
                                        <div class="panel-heading">
                                            <h4 class="panel-title">
                                                <a class="accordion-toggle color-btn-new-sites" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                                                                    Smart Link
                                                               </a>
                                            </h4>
                                        </div>
                                        <div id="collapseOne" class="panel-collapse  collapse">
                                            <div class="panel-body">
                                                <form role="form" form ref='uploadForm' id='uploadForm' action='/newSmartLink' method='post' encType="multipart/form-data">
                                                    <div class="col-md-6">
                                                        <div class="col-md-12">
                                                            <div class="form-group">
                                                                <label for="txt_titleSL">Title:</label>
                                                                <input type="text" class="form-control" id="txt_titleSL" name="txt_titleSL" required>
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="txt_descriptionSL">Description:</label>
                                                                <textarea class="form-control" name="txt_descriptionSL" id="txt_descriptionSL" placeholder="SmartLink text..." rows="3" required></textarea>
                                                            </div>

                                                            <div class="form-group">
                                                                <label for="txt_urlPromoSL">Url to promote:</label>
                                                                <input type="text" class="form-control" id="txt_urlPromoSL" name="txt_urlPromoSL" required>
                                                            </div>


                                                            <div class="form-group">
                                                                <label for="file-input-img">Upload image</label>
                                                                <input type="file" id="file-input-img" name="fileImage" accept=".png, .jpg, .jpeg" required>
                                                                <p class="help-block">The image must have a maximum size of 250 x 150.</p>
                                                            </div>


                                                            <button type="submit" class="btn btn-info" id="brn_confirm">Confirm</button>

                                                        </div>


                                                    </div>
                                                </form>

                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <!--tab nav start-->
                                <section class="panel general">
                                    <header class="panel-heading tab-bg-dark-navy-blue">
                                        <ul class="nav nav-tabs">
                                            <li class="active">
                                                <a data-toggle="tab" href="#tableSmartLink">List of aggregated smart link</a>
                                            </li>
                                        </ul>
                                    </header>
                                    <div class="panel-body">
                                        <div class="tab-content">
                                            <div id="dataTableSlAdd" class="tab-pane active">
                                                <div class="row">
                                                    <div class="col-xs-12">
                                                        <div class="panel">

                                                            <div class="panel-body table-responsive">
                                                                <table class="table table-condensed table-hover" id="tableSmartLink" width="100%">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>NAME</th>
                                                                            <th>DESCRIPTION</th>
                                                                            <th>URL TO PROMO</th>
                                                                            <th>OPCIONS</th>
                                                                        </tr>
                                                                    </thead>

                                                                    <tfoot>

                                                                    </tfoot>

                                                                    <tbody id="detailSmartLink">
                                                                    </tbody>


                                                                </table>
                                                            </div>
                                                            <!-- /.box-body -->
                                                        </div>
                                                        <!-- /.box -->
                                                    </div>

                                                    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="modalEdit" class="modal fade">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                                                                    <h4 class="modal-title">EDIT URL</h4>
                                                                </div>
                                                                <div class="modal-body">

                                                                    <div class="form-group">
                                                                        <label for="exampleInputEmail1">FSFSFSDF</label>

                                                                    </div>
                                                                    <a class="btn btn-default">Confirm</a>

                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="modalDetail" class="modal fade">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                                                                    <h4 class="modal-title">DETAIL</h4>
                                                                </div>
                                                                <div class="modal-body">


                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                                <!--tab nav start-->

                            </div>
                        </div>

                    </section>
                    <!-- /.content -->


                </aside>
                <!-- /.right-side -->

        </div>
        <!-- ./wrapper -->

        <%- include ../templates/userAdmin/importScripts.ejs %>

            <!-- daterangepicker -->
            <script src="./utilities/js/plugins/daterangepicker/daterangepicker.js" type="text/javascript"></script>

            <!-- iCheck -->
            <script src="./utilities/js/plugins/iCheck/icheck.min.js" type="text/javascript"></script>

            <!-- calendar -->
            <script src="./utilities/js/plugins/fullcalendar/fullcalendar.js" type="text/javascript"></script>

            <!-- datatable -->
            <script type="text/javascript" src="./utilities/js/jquery.dataTables.min.js"></script>
            <link rel="stylesheet" type="text/css" href="./utilities/css/jquery.dataTables.min.css" />

            <!--<script src="./utilities/js/WhatPush/Editor/editorDB-sites.js" type="text/javascript"></script>-->




</body>

</html>